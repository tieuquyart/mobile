<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:width="90dp" android:height="20dp">
        <shape android:shape="rectangle">
            <gradient android:angle="180" android:endColor="#75d7d7d7" android:startColor="#e2e2e2" android:type="linear" android:useLevel="true" />
            <corners android:bottomLeftRadius="8dp" android:bottomRightRadius="8dp" android:topLeftRadius="0dp" android:topRightRadius="0dp" />
            <item android:name="android:shadowColor">#1f000000</item>
            <item android:name="android:shadowDx">0</item>
            <item android:name="android:shadowDy">1</item>
        </shape>
    </item>
</selector>