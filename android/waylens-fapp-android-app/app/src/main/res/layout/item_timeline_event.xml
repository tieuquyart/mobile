<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/view_top"
        android:layout_width="@dimen/dp_5"
        android:layout_height="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_89"
        android:background="@color/gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_videoType"
            style="@style/SettingItemPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/rl_timeline"
            tools:text="Sharp Turn" />

        <TextView
            android:id="@+id/tv_videoLocation"
            style="@style/SettingItemGrayBig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_videoType"
            android:layout_marginEnd="@dimen/dp_30"
            android:layout_toEndOf="@+id/rl_timeline"
            tools:text="2300 E Ocean Blvd, Long Beach, CA" />

        <RelativeLayout
            android:id="@+id/rl_timeline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_videoType"
            android:layout_alignBottom="@id/tv_videoLocation"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_toEndOf="@+id/tv_videoTime">

            <View
                android:layout_width="@dimen/dp_5"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@color/gray" />

            <com.mk.autosecure.ui.view.MultiSegBar
                android:id="@+id/v_videoIndicator"
                android:layout_width="@dimen/dp_5"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true" />

            <View
                android:layout_width="@dimen/dp_7"
                android:layout_height="@dimen/dp_7"
                android:background="@drawable/background_status_point"
                android:visibility="invisible" />
        </RelativeLayout>

        <TextView
            android:id="@id/tv_videoTime"
            android:layout_width="@dimen/dp_76"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/rl_timeline"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_12"
            tools:text="12:19 PM" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_11"
            android:src="@drawable/icon_next_grey" />

    </RelativeLayout>

    <View
        android:id="@+id/view_bottom"
        android:layout_width="@dimen/dp_5"
        android:layout_height="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_89"
        android:background="@color/gray" />

</LinearLayout>