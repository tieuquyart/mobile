<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundWhite"
    android:orientation="vertical"
    tools:context=".ui.activity.settings.ProtectVoltageActivity">

    <include
        android:id="@+id/default_toolbar"
        layout="@layout/default_toolbar" />

    <TextView
        android:id="@+id/tv_battery_protection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        android:text="@string/which_protection_mode"
        android:textColor="@color/colorNaviText"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/default_toolbar" />

    <RadioGroup
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:id="@+id/rg_protection_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bg_white"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_18"
        android:paddingEnd="@dimen/dp_18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_battery_protection">

        <RadioButton
            android:id="@+id/rb_daily_driver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_17"
            android:paddingStart="@dimen/dp_9"
            android:paddingBottom="21dp"
            android:text="@string/daily_driver"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_38"
            android:layout_marginTop="-18dp"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_17"
            android:text="@string/daily_driver_tips"
            android:textColor="@color/colorGrayText"
            android:textSize="@dimen/sp_10" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/colorBackgroundWhite" />

        <RadioButton
            android:id="@+id/rb_balanced"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_14"
            android:paddingStart="@dimen/dp_9"
            android:paddingBottom="21dp"
            android:text="@string/balanced"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_38"
            android:layout_marginTop="-18dp"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_17"
            android:text="@string/balanced_tips"
            android:textColor="@color/colorGrayText"
            android:textSize="@dimen/sp_10" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/colorBackgroundWhite" />

        <RadioButton
            android:id="@+id/rb_extended"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_14"
            android:paddingStart="@dimen/dp_9"
            android:paddingBottom="21dp"
            android:text="@string/extended"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_38"
            android:layout_marginTop="-18dp"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_17"
            android:text="@string/extended_tips"
            android:textColor="@color/colorGrayText"
            android:textSize="@dimen/sp_10" />

        <View
            android:id="@+id/view_extreme"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/colorBackgroundWhite"
            android:visibility="gone" />

        <RadioButton
            android:id="@+id/rb_extreme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_14"
            android:paddingStart="@dimen/dp_9"
            android:paddingBottom="21dp"
            android:text="@string/extreme"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_14"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_extreme_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_38"
            android:layout_marginTop="-18dp"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_17"
            android:text="@string/extreme_tips"
            android:textColor="@color/colorGrayText"
            android:textSize="@dimen/sp_10"
            android:visibility="gone" />

    </RadioGroup>

    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_enter_protection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:padding="@dimen/dp_5"
        android:text="@string/the_camera_often_enter_battery_protection_mode" />

</LinearLayout>