<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/divider_small"
    android:orientation="vertical"
    android:showDividers="middle"
    android:background="@color/bg_main_color"
    tools:context="com.mk.autosecure.ui.activity.settings.AssetVehicleEditActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        app:layout_scrollFlags="scroll"
        app:navigationIcon="@drawable/ic_back"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            android:id="@+id/tv_toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:textColor="@color/colorToolbarTitle"
            android:textSize="20sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_bottom"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_16"
            android:background="@drawable/border_bg_white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_plateNo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_89"
                android:layout_marginTop="@dimen/dp_3"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_52"
                    android:layout_height="@dimen/dp_52"
                    android:layout_marginStart="@dimen/dp_30"
                    android:src="@drawable/icon_vehicle" />

                <TextView
                    android:id="@+id/tv_plate_number"
                    style="@style/PrimaryNormalText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_23"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp_14"
                    tools:text="NY ABC234" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"

                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/SettingItemPrimary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_26"
                    android:layout_weight="1"
                    android:text="Id" />

                <TextView
                    android:id="@+id/tv_vehicle_id"
                    style="@style/SettingItemGrayBig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:maxEms="12"
                    android:maxLines="1"
                    android:singleLine="true"
                    tools:text="1" />

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:src="@drawable/btn_settings_list_next"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_driver"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"

                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/SettingItemPrimary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_26"
                    android:layout_weight="1"
                    android:text="@string/driver" />

                <TextView
                    android:id="@+id/tv_driver_name"
                    style="@style/SettingItemGrayBig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:maxEms="12"
                    android:maxLines="1"
                    android:singleLine="true"
                    tools:text="Tony Stark" />

                <ImageView
                    android:id="@+id/img_driver_edit"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:src="@drawable/btn_settings_list_next" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_vehicle_camera"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"

                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/SettingItemPrimary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_26"
                    android:layout_weight="1"
                    android:text="@string/camera" />

                <TextView
                    android:id="@+id/tv_vehicle_camera"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingStart="@dimen/dp_13"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5"
                    android:textSize="@dimen/sp_14"
                    tools:text="2K17NKWL" />

                <ImageView
                    android:id="@+id/img_camera_edit"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:src="@drawable/btn_settings_list_next"
                    android:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_vehicle_model"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"

                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/SettingItemPrimary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_26"
                    android:layout_weight="1"
                    android:text="@string/model" />

                <TextView
                    android:id="@+id/tv_vehicle_model"
                    style="@style/SettingItemGrayBig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:maxLines="1"
                    tools:text="Tesla Model S" />

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:src="@drawable/btn_settings_list_next"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_vehicle_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/SettingItemPrimary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_26"
                    android:layout_weight="1"
                    android:text="Type" />

                <TextView
                    android:id="@+id/tv_vehicle_type"
                    style="@style/SettingItemGrayBig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:maxLines="1"
                    tools:text="Truck" />

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:src="@drawable/btn_settings_list_next"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_vehicle_capacity"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:gravity="center_vertical"

                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/SettingItemPrimary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_26"
                    android:layout_weight="1"
                    android:text="Capacity" />

                <TextView
                    android:id="@+id/tv_vehicle_capacity"
                    style="@style/SettingItemGrayBig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:maxLines="1"
                    tools:text="7" />

                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:src="@drawable/btn_settings_list_next"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_vehicle_edit"
            style="@style/BorderButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_blue_border"
            android:text="@string/edit" />

        <Button
            android:id="@+id/btn_unbind_remove"
            style="@style/BorderButton"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_red_border_gray"
            android:text="@string/remove" />
    </LinearLayout>

</RelativeLayout>
