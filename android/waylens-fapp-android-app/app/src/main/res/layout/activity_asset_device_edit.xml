<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:showDividers="middle"
    android:background="@color/bg_main_color"
    tools:context="com.mk.autosecure.ui.activity.settings.AssetDeviceEditActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        app:layout_scrollFlags="scroll"
        app:navigationIcon="@drawable/ic_back"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            android:id="@+id/tv_toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:textColor="@color/colorToolbarTitle"
            android:textSize="20sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_button"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="-734dp"
        android:background="@color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/border_bg_white"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/ll_bound_status"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_89"
                android:layout_marginTop="@dimen/dp_3"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_52"
                    android:layout_height="@dimen/dp_52"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/tv_camera_sn"
                    android:src="@drawable/icon_camera_fourg"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/tv_camera_sn"
                    style="@style/PrimaryNormalText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/dp_23"
                    android:layout_marginEnd="@dimen/dp_16"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp_18"
                    tools:text="Bound by NY ABC234" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/SettingItemPrimary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_26"
                    android:layout_weight="1"
                    android:text="@string/id"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_device_id"
                    style="@style/SettingItemGrayBig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_26"
                    android:maxLines="1"
                    android:textSize="@dimen/sp_16"
                    tools:text="14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/SettingItemPrimary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_26"
                    android:layout_weight="1"
                    android:text="@string/password"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_device_password"
                    style="@style/SettingItemGrayBig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_26"
                    android:maxLines="1"
                    android:textSize="@dimen/sp_16"
                    tools:text="1.17.09" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    style="@style/SettingItemPrimary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_26"
                    android:layout_weight="1"
                    android:text="@string/s_n"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_device_sn"
                    style="@style/SettingItemGrayBig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_26"
                    android:maxLines="1"
                    android:textSize="@dimen/sp_16"
                    tools:text="WC" />
            </LinearLayout>

            <LinearLayout
                android:visibility = "gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/SettingItemPrimary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_26"
                    android:layout_weight="1"
                    android:text="@string/fcc_id"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_device_fccId"
                    style="@style/SettingItemGrayBig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_26"
                    android:maxLines="1"
                    android:textSize="@dimen/sp_16"
                    tools:text="36" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/SettingItemPrimary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_26"
                    android:layout_weight="1"
                    android:text="@string/phone"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_device_phone"
                    style="@style/SettingItemGrayBig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_26"
                    android:maxLines="1"
                    android:textSize="@dimen/sp_16"
                    tools:text="89861118050211172229" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/SettingItemPrimary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_26"
                    android:layout_weight="1"
                    android:text="@string/vehicle"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_device_vehicle"
                    style="@style/SettingItemGrayBig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_26"
                    android:maxLines="1"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    tools:text="89861118050211172229" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/SettingItemPrimary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_26"
                    android:layout_weight="1"
                    android:text="@string/camera_status"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:id="@+id/tv_device_status"
                    style="@style/SettingItemGrayBig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_26"
                    android:maxLines="1"
                    android:textSize="@dimen/sp_16"
                    tools:text="89861118050211172229" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBackgroundBlue"
        android:orientation="vertical"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_activate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@drawable/background_add_member"
            android:text="@string/activate"
            android:textAllCaps="false"
            android:textColor="@color/colorBaseFleet"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_go_setup"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@drawable/background_add_member"
            android:text="@string/go_to_setup"
            android:textAllCaps="false"
            android:textColor="@color/colorBaseFleet"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_go_edit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_20"
            android:background="@drawable/background_add_member"
            android:text="@string/edit"
            android:textAllCaps="false"
            android:textColor="@color/colorBaseFleet"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_remove"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_below="@id/btn_activate"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/background_personnel_remove"
            android:text="@string/remove"
            android:textAllCaps="false"
            android:textColor="@color/colorRedWarn" />

    </LinearLayout>

</RelativeLayout>
