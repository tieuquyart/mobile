<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b3344254">

    <LinearLayout
        android:layout_width="@dimen/dp_260"
        android:layout_height="@dimen/dp_220"
        android:background="@drawable/bg_tour_welcome"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_24"
            android:layout_marginEnd="@dimen/dp_24"
            android:gravity="center"
            android:text="@string/you_have_not_reset_the_initial_password_please_reset_your_password_to_continue_using_waylens_service"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_14" />

        <Button
            android:id="@+id/btn_reset_password"
            android:layout_width="@dimen/dp_160"
            android:layout_height="@dimen/dp_36"
            android:layout_marginTop="@dimen/dp_23"
            android:background="@drawable/background_reset_password"
            android:text="@string/setup_continue"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>