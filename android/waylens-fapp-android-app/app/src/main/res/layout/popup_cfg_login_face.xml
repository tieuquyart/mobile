<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_outside"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="@dimen/dp_260"
        android:layout_height="@dimen/dp_286"
        android:background="@drawable/bg_item_filter"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_cfg_login_face"
            style="@style/SettingItemPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/cfg_login_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_16"
            android:gravity="center"
            android:text="@string/select_mobile_cfg_login"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_16"
            android:gravity="center"
            android:text="@string/select_auto_login_face"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_14" />

        <Button
            android:id="@+id/btn_cfg_mobile"
            style="@style/BorderButton"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_height="@dimen/dp_36"
            android:layout_marginTop="@dimen/dp_23"
            android:background="@drawable/button_blue_border"
            android:text="@string/btn_cfg_mobile"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

        <Button
            android:id="@+id/btn_cfg_auto"
            style="@style/BorderButton"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_height="@dimen/dp_36"
            android:textColor="@color/white"
            android:background="@drawable/button_red_border_gray"
            android:layout_marginTop="@dimen/dp_8"
            android:text="@string/btn_cfg_auto" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>