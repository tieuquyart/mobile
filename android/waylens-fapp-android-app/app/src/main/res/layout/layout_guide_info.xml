<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_guide">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white"
            android:visibility="invisible"
            app:layout_scrollFlags="scroll"
            app:navigationIcon="@drawable/ic_back"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/tv_info_margin"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:background="@color/colorAccent"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:text="@string/camera_information_recordStopped"
            android:textColor="@color/white"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible">

            <com.mk.autosecure.ui.view.FixedAspectRatioFrameLayout
                android:id="@+id/media_window"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:farfl_xratio="16dp"
                app:farfl_yratio="9dp">

            </com.mk.autosecure.ui.view.FixedAspectRatioFrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_below="@id/media_window"
                android:background="@color/colorPrimary"
                android:visibility="invisible">


            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <View
                android:id="@+id/view_info"
                android:layout_width="@dimen/dp_5"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_marginStart="80dp" />

            <FrameLayout
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_guide_export">

                <ImageView
                    android:id="@+id/iv_info_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_white_gradient_top" />
            </FrameLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_skip_info"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_54"
                android:layout_marginEnd="@dimen/dp_100"
                android:layout_marginBottom="@dimen/dp_30"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="@string/tour_button_skip"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_15"
                android:gravity="bottom"
                android:text="@string/guide_show_info"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                android:id="@+id/layout_guide_info"
                layout="@layout/dialog_video_toolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_134" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dp_48">

                <ImageView
                    android:id="@+id/iv_info_tapShadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bg_tap_shadow" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_19"
                    android:src="@drawable/icon_guide_tap" />
            </FrameLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
