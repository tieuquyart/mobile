<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main_color"
    android:divider="@drawable/divider_small"
    android:orientation="vertical"
    android:showDividers="middle"
    tools:context="com.mk.autosecure.ui.activity.settings.AddCameraActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        app:layout_scrollFlags="scroll"
        app:navigationIcon="@drawable/ic_back"
        app:theme="@style/ToolbarStyle">

        <TextView
            android:id="@+id/tv_toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="@string/add_new_camera"
            android:textColor="@color/colorToolbarTitle"
            android:textSize="20sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_bottom"
        android:layout_below="@+id/toolbar"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_16"
        android:background="@color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_bg_white"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_common_background"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/SettingItemPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_weight="1"
                    android:text="@string/s_n" />


                <EditText

                    android:id="@+id/et_camera_sn"
                    style="@style/SettingItemGrayBig"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@drawable/border_ed"
                    android:hint="@string/xin_nh_p_s_n"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/colorNaviText"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/item_common_background"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/SettingItemPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_weight="1"
                    android:text="@string/password" />

                <EditText

                    android:id="@+id/et_camera_password"
                    style="@style/SettingItemGrayBig"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/border_ed"
                    android:drawableEnd="@drawable/ic_eye_detail"
                    android:hint="@string/xin_nh_p_m_t_kh_u"
                    android:inputType="numberPassword|textPassword"
                    android:maxLength="8"
                    android:maxLines="1"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/colorNaviText"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/item_common_background"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/SettingItemPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_weight="1"
                    android:text="@string/camera_type" />

                <EditText
                    android:id="@+id/et_camera_type"
                    style="@style/SettingItemGrayBig"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/border_ed"
                    android:backgroundTint="@color/colorUnable"
                    android:enabled="false"
                    android:inputType="number"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Autosecure"
                    android:textColorHint="@color/colorNaviText" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/item_common_background"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/SettingItemPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_weight="1"
                    android:text="@string/phone_number" />

                <EditText

                    android:id="@+id/et_phone"
                    style="@style/SettingItemGrayBig"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/border_ed"
                    android:hint="@string/xin_nh_p_i_n_tho_i"
                    android:inputType="number"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/colorNaviText"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/item_common_background"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/SettingItemPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_weight="1"
                    android:text="@string/setup_date" />

                <TextView

                    android:id="@+id/tv_setupDate"
                    style="@style/SettingItemGrayBig"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_45"
                    android:background="@drawable/border_ed"
                    android:gravity="center_vertical"
                    android:hint="@string/input_setup_date"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/colorNaviText"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_cancel_add"
            style="@style/BorderButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/border_ed"
            android:text="@string/cancel"
            android:textColor="@color/holo_red_light" />

        <Button
            android:id="@+id/btn_confirm_add"
            style="@style/BorderButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/button_blue_border"
            android:enabled="false"
            android:text="@string/x_c_nh_n" />

    </LinearLayout>

</RelativeLayout>
