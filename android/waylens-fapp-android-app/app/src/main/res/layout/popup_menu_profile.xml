<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llSortChangePopup"
    android:layout_width="@dimen/dp_200"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item_filter"
    android:orientation="vertical"
    android:layout_marginEnd="@dimen/dp_16"
    android:paddingBottom="@dimen/dp_10">

    <LinearLayout
        android:id="@+id/ll_go_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_top_left_right"
        android:backgroundTint="@color/colorBottomTab"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:textSize="@dimen/sp_18"
            android:id="@+id/tv_user_name"
            style="@style/PrimaryNormalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_10"
            tools:text="@string/profile"
            android:textColor="@color/white" />


        <TextView
            android:id="@+id/tv_role_fleet"
            style="@style/SettingItemGraySmall"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            tools:text="@string/detail_title"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_5"
        android:id="@+id/ll_go_account_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_2"
            android:src="@drawable/ic_user_account" />


        <TextView
            android:id="@+id/tvDistance"
            style="@style/SettingItemGraySmall"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/sp_15"
            android:layout_weight="1.0"
            android:gravity="center_vertical"
            android:paddingTop="5dp"
            android:text="@string/account_info"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_go_change_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/bg_main_color"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_2"
                android:src="@drawable/ic_password_account" />

            <TextView
                android:id="@+id/tvEdit"
                style="@style/SettingItemGraySmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:paddingTop="5dp"
                android:text="@string/profile_account_change_password"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/ll_go_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/bg_main_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_2"
                android:src="@drawable/ic_setting_account" />

            <TextView
                android:id="@+id/tvActive"
                style="@style/SettingItemGraySmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:paddingTop="5dp"
                android:text="@string/settings"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_15" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout

        android:id="@+id/ll_go_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/bg_main_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_2"
                android:src="@drawable/ic_logout"
                android:tint="@color/holo_red_dark"
                tools:ignore="UseAppTint" />

            <TextView
                android:id="@+id/tvAbc"
                style="@style/SettingItemGraySmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_weight="1.0"
                android:gravity="center_vertical"
                android:paddingTop="5dp"
                android:text="@string/logout"
                android:textColor="@color/holo_red_dark"
                android:textSize="@dimen/sp_15" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>