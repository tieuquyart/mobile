<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_65"
    android:orientation="vertical">

    <View
        android:id="@+id/view_top"
        android:layout_width="@dimen/dp_5"
        android:layout_height="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_89"
        android:background="@color/gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_35">

        <TextView
            android:id="@+id/tv_videoStatus"
            style="@style/SettingItemPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_toEndOf="@id/rl_timeline"
            tools:text="Peter Parker went into Parking mode" />

        <RelativeLayout
            android:id="@+id/rl_timeline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_toEndOf="@+id/tv_videoTime">

            <View
                android:layout_width="@dimen/dp_5"
                android:layout_height="@dimen/dp_35"
                android:layout_centerHorizontal="true"
                android:background="@color/gray" />

            <View
                android:id="@+id/view_status"
                android:layout_width="@dimen/dp_7"
                android:layout_height="@dimen/dp_7"
                android:layout_marginTop="@dimen/dp_6"
                android:background="@drawable/background_status_point" />
        </RelativeLayout>

        <TextView
            android:id="@id/tv_videoTime"
            android:layout_width="@dimen/dp_76"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_12"
            tools:text="12:19 PM" />

    </RelativeLayout>

    <View
        android:id="@+id/view_bottom"
        android:layout_width="@dimen/dp_5"
        android:layout_height="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_89"
        android:background="@color/gray" />
</LinearLayout>