<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundWhite"
    android:divider="@drawable/divider_small"
    android:dividerPadding="8dp"
    android:orientation="vertical"
    android:showDividers="middle"
    tools:context="com.mk.autosecure.ui.activity.settings.ApnSettingActivity">

    <include
        layout="@layout/default_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/rl_riskDrive"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_75"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/border_bg_white"
        android:orientation="horizontal">

        <TextView
            style="@style/SettingItemPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_26"
            android:text="@string/risk_drive_event" />

        <Switch
            android:id="@+id/switch_riskDrive"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_25"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_26"
            android:checked="false" />

    </RelativeLayout>

    <EditText
        android:background="@drawable/border_ed"
        android:id="@+id/et_event_param"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_margin="16dp"
        android:enabled="false"
        android:singleLine="true" />

    <Button
        android:id="@+id/btn_event_apply"
        style="@style/BorderButton"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:enabled="false"
        android:text="@string/apply" />

</LinearLayout>
