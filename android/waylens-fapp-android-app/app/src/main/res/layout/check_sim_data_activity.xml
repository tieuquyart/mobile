<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/divider_small"
    android:background="@color/bg_main_color"
    android:orientation="vertical">

    <include layout="@layout/default_toolbar" />

    <TextView
        style="@style/SettingItemGrayBig"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_10"
        android:text="@string/check_data_4g"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:background="@drawable/border_ed"
        android:id="@+id/etPhoneNo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_15"
        android:gravity="center_vertical"
        android:hint="@string/phone" />

    <EditText
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/etContent"
        android:background="@drawable/border_ed"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:gravity="start"
        android:hint="Nội dung" />

    <Button
        android:id="@+id/btn_checkSimData"
        style="@style/BorderButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_20"
        android:text="@string/check_sim_card"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/llMsg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/border_ed"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:text="Nội dung tin nhắn:"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvMsgSimData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:background="@drawable/border_color_bg_main"
                android:gravity="start"
                android:padding="@dimen/dp_10"
                android:text="Lưu lượng còn lại của quý khách" />
        </ScrollView>
    </LinearLayout>
</LinearLayout>