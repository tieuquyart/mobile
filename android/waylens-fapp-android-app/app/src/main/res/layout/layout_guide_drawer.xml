<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_guide"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_106">

        <LinearLayout
            android:id="@+id/ll_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_75"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_26"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_11"
                android:paddingBottom="@dimen/dp_11">

                <ImageView
                    android:id="@+id/iv_userAvatar"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/dp_4"
                    android:src="@drawable/setting_user" />

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/log_in"
                    android:textColor="@color/menu_text_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_album"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_11"
                android:paddingBottom="@dimen/dp_11">

                <ImageView
                    android:id="@+id/iv_album"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/dp_4"
                    android:src="@drawable/background_album" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/menu_album"
                    android:textColor="@color/menu_text_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_11"
                android:paddingBottom="@dimen/dp_11">

                <ImageView
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/dp_4"
                    android:src="@drawable/background_settings" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/settings"
                    android:textColor="@color/menu_text_color"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_201"
            android:layout_marginTop="@dimen/dp_16"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_26"
                android:gravity="start"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_11"
                android:paddingBottom="@dimen/dp_11">

                <View
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:background="#24ffffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="@string/guide_account"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:gravity="start"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_11"
                android:paddingBottom="@dimen/dp_11">

                <View
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:background="#24ffffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="@string/guide_album"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:gravity="start"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_11"
                android:paddingBottom="@dimen/dp_11">

                <View
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:background="#24ffffff" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="@string/guide_setting"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <include layout="@layout/include_guide_skiporgo" />

</RelativeLayout>