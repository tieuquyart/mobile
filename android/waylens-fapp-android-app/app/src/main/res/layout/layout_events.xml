<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_117"
    android:background="@color/bg_main_color"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_event_type"
        android:layout_width="@dimen/dp_26"
        android:layout_height="@dimen/dp_26"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_22"
        android:layout_marginEnd="@dimen/dp_13"
        android:src="@drawable/icon_event_sharp_turn" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_event_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_16"
            tools:text="Sharp Turn" />

        <TextView
            android:id="@+id/tv_plate_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_12"
            tools:text="NY ABC123   |  09:28 June19 (EAT)" />

        <TextView
            android:id="@+id/tv_event_location"
            style="@style/SettingItemGraySmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            tools:text="1000 Massachusetts Avenue" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_event_play"
        android:layout_width="@dimen/dp_39"
        android:layout_height="@dimen/dp_39"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/dp_33"
        android:src="@drawable/icon_play" />

</LinearLayout>