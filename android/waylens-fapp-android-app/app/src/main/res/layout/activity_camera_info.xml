<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundWhite"
    android:orientation="vertical">

    <include
        layout="@layout/default_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:divider="@drawable/divider_small"
            android:dividerPadding="8dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:showDividers="middle">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bg_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_90"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="@dimen/dp_10">

                    <TextView
                        style="@style/SettingItemPrimary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name"
                        android:textSize="@dimen/sp_14" />

                    <EditText
                        android:id="@+id/et_camera_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLength="20"
                        android:singleLine="true"
                        android:visibility="gone"
                        tools:text="Mayday" />

                    <LinearLayout
                        android:id="@+id/ll_camera_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_camera_name"
                            style="@style/SettingItemGraySmall"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_5"
                            android:layout_weight="1"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/sp_20"
                            android:textStyle="bold"
                            tools:text="Mayday" />

                        <ImageView
                            android:id="@+id/iv_edit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/transparent"
                            android:padding="@dimen/dp_6"
                            android:src="@drawable/icon_edit" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:background="@color/bg_main_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="16dp">

                    <TextView
                        style="@style/SettingItemGraySmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/serial_number"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_serialNumber"
                        style="@style/SettingItemGraySmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        tools:text="2.9GB" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="16dp">

                    <TextView
                        style="@style/SettingItemGraySmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/model"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_hardwareMode"
                        style="@style/SettingItemGraySmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        tools:text="2.9GB" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"

                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="16dp">

                    <TextView
                        style="@style/SettingItemGraySmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/version"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_firmwareVersion"
                        style="@style/SettingItemGraySmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        tools:text="2.9GB" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll_mount_model"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"

                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="16dp">

                    <TextView
                        style="@style/SettingItemGraySmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/mount_model"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_mountModel"
                        style="@style/SettingItemGraySmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        tools:text="1.9GB" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_mount_version"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"

                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="16dp">

                    <TextView
                        style="@style/SettingItemGraySmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/mount_version"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_mountVersion"
                        style="@style/SettingItemGraySmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        tools:text="1.9GB" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_modem"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"

                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="16dp">

                    <TextView
                        style="@style/SettingItemGraySmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/modem_version"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_modemVersion"
                        style="@style/SettingItemGraySmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textSize="@dimen/sp_14"
                        tools:text="1.9GB" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_modem_debug"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"

                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="16dp"
                    android:visibility="gone">

                    <TextView
                        style="@style/SettingItemGraySmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/modem_version"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_modemVersionDebug"
                        style="@style/SettingItemGraySmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingStart="16dp"
                        android:textSize="@dimen/sp_14"
                        tools:text="1.9GB" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_fourg_network"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="16dp"

                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dp_10"
                    android:paddingEnd="16dp"
                    android:visibility="gone">

                    <TextView
                        style="@style/SettingItemGraySmall"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/network"
                        android:textSize="@dimen/sp_14" />

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/btn_settings_list_next" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>