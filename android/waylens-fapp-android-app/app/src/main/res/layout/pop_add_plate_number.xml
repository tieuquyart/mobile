<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b3344254">

    <LinearLayout
        android:layout_width="@dimen/dp_260"
        android:layout_height="@dimen/dp_286"
        android:background="@drawable/bg_tour_welcome"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_plate_number"
            style="@style/SettingItemPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_38"
            android:gravity="center"
            android:textStyle="bold"
            tools:text="Plate Numberï¼š\nNY 999NNN " />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_24"
            android:gravity="center"
            android:text="@string/the_plate_number_can_not_be_changed_once_the_vehicle_added_to_the_fleet"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_24"
            android:gravity="center"
            android:text="@string/sure_to_add_the_vehicle"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_14" />

        <Button
            android:id="@+id/btn_add_action"
            style="@style/BorderButton"
            android:layout_width="@dimen/dp_160"
            android:layout_height="@dimen/dp_36"
            android:layout_marginTop="@dimen/dp_23"
            android:background="@drawable/background_reset_password"
            android:text="@string/support_beta_tester_yes"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_cancel_add"
            style="@style/SettingItemGrayBig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:padding="@dimen/dp_11"
            android:text="@string/cancel" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>