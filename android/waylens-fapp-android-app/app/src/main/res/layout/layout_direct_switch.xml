<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    >

    <RelativeLayout
        android:id="@+id/rl_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@drawable/border_bg_white"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_direct_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_17"
            android:text="@string/wifi_direct"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_direct_status"
            android:layout_marginStart="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginEnd="@dimen/dp_24"
            android:layout_marginBottom="@dimen/dp_19"
            android:layout_toStartOf="@+id/direct_switch"
            android:text="@string/wifi_direct_warning"
            android:textColor="#9CA3AC"
            android:textSize="@dimen/sp_12" />

        <Switch
            android:id="@+id/direct_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginEnd="@dimen/dp_26" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_manage_trust"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_26"
        android:paddingTop="@dimen/dp_7"
        android:paddingBottom="@dimen/dp_7"
        android:text="@string/direct_manage_trusted"
        android:textColor="#99A0A9"
        android:textSize="@dimen/sp_14"
        app:layout_constraintTop_toBottomOf="@id/rl_switch" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_trusted"
        android:padding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bg_white"
        app:layout_constraintTop_toBottomOf="@id/tv_manage_trust" />

    <TextView
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/tv_trust_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bg_white"
        android:paddingStart="@dimen/dp_26"
        android:paddingTop="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_26"
        android:paddingBottom="@dimen/dp_16"
        android:text="@string/wifi_direct_tips"
        android:textColor="#99A0A9"
        android:textSize="@dimen/sp_14"
        app:layout_constraintTop_toBottomOf="@id/rv_trusted" />

</androidx.constraintlayout.widget.ConstraintLayout>