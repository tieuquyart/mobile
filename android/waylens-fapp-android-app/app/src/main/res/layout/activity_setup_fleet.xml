<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundBlue"
    tools:context="com.mk.autosecure.ui.activity.settings.SetupFleetActivity">

    <include
        android:id="@+id/include_setup_fleet"
        layout="@layout/include_setup_fleet"
        android:visibility="gone" />

    <include
        android:id="@+id/include_setup_installer"
        layout="@layout/include_setup_installer"
        android:visibility="gone"
        tools:visibility="visible" />

    <Button
        android:id="@+id/btn_ok"
        style="@style/BorderButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_76"
        android:text="@string/ok"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
