<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b3344254">

    <LinearLayout
        android:layout_width="@dimen/dp_260"
        android:layout_height="@dimen/dp_300"
        android:background="@drawable/bg_tour_welcome"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_close_pop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="@dimen/dp_14"
            android:src="@drawable/navbar_close_gray"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon_continue_guide" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_24"
            android:layout_marginStart="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_16"
            android:gravity="center"
            android:text="@string/guide_continue_tips"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_22"
            android:layout_marginStart="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_29"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_next_guide"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_36"
                android:layout_marginEnd="@dimen/dp_8"
                android:background="@drawable/shape_gray_stroke"
                android:gravity="center"
                android:text="@string/guide_not_now"
                android:textAllCaps="false"
                android:textColor="#D6D9DD"
                android:textSize="@dimen/sp_14" />

            <Button
                android:id="@+id/btn_continue_guide"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_36"
                android:layout_marginStart="@dimen/dp_8"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="@string/setup_continue"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_never_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_32"
            android:paddingStart="@dimen/dp_32"
            android:paddingTop="@dimen/dp_8"
            android:text="@string/guide_never"
            android:textColor="#99A0A9"
            android:textSize="14sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>