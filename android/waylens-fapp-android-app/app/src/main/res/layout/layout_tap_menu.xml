    <LinearLayout
        android:id="@+id/ll_export_info"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="-4dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/icon_error_information" />

        <View
            android:id="@+id/dialog_view_export"
            android:layout_width="5dp"
            android:layout_height="16dp"
            android:background="@drawable/view_type_buffered" />

        <TextView
            android:id="@+id/tv_export_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/white"
            tools:text="Buffered Â· 15s" />
    </LinearLayout>

