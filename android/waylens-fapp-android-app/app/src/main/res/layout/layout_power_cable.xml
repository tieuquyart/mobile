<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_shadow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_12"
        android:background="@color/colorGrayBackground"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_63"
        android:gravity="center"
        android:paddingStart="@dimen/dp_50"
        android:paddingEnd="@dimen/dp_50"
        android:text="@string/choose_power_cable"
        android:textColor="#4A4A4A"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_shadow" />

    <RadioGroup
        android:id="@+id/rg_power_install"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_165"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_shadow">

        <RadioButton
            android:id="@+id/rb_power_cable"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_96"
            android:background="@drawable/bg_power_cable"
            android:button="@null"
            android:drawableEnd="@drawable/icon_power_cable"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_49"
            android:paddingEnd="@dimen/dp_26"
            android:text="@string/obd_cable"
            android:textColorHighlight="@color/colorAccent"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/rb_direct_wire"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_96"
            android:layout_marginTop="@dimen/dp_25"
            android:background="@drawable/bg_power_cable"
            android:button="@null"
            android:drawableEnd="@drawable/icon_direct_wire"
            android:gravity="center_vertical"
            android:paddingStart="@dimen/dp_49"
            android:paddingEnd="@dimen/dp_32"
            android:text="@string/direct_wire"
            android:textColorHighlight="@color/colorAccent"
            android:textSize="14sp" />
    </RadioGroup>

    <Button
        android:id="@+id/btn_power_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_57"
        android:background="#D6D9DD"
        android:text="@string/forget_password_next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>