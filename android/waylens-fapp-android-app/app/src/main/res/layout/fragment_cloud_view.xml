<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBgWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white"
            app:layout_scrollFlags="scroll"
            app:navigationIcon="@drawable/icon_change_preview"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <TextView
                android:id="@+id/tv_toolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/colorToolbarTitle"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                tools:text="BMW" />

        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:id="@+id/ll_setting_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DC4250"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:src="@drawable/icon_setting_fail" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/setting_request_fail"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black">

            <com.mk.autosecure.ui.view.FixedAspectRatioFrameLayout
                android:id="@+id/media_window"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:farfl_xratio="16dp"
                app:farfl_yratio="9dp">

                <android.opengl.GLSurfaceView
                    android:id="@+id/gl_live"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <android.opengl.GLSurfaceView
                    android:id="@+id/gl_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginStart="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_12"
                    android:background="@drawable/bg_videosrc"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_curStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_6"
                        tools:src="@drawable/icon_live_view" />

                    <TextView
                        android:id="@+id/tv_curStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_12"
                        android:textStyle="bold"
                        tools:text="@string/to_live" />
                </LinearLayout>

                <View
                    android:id="@+id/view_shadow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/opaque"
                    android:visibility="gone" />

            </com.mk.autosecure.ui.view.FixedAspectRatioFrameLayout>

            <LinearLayout
                android:id="@+id/ll_message_remind"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/tv_msg_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14" />

                <ImageButton
                    android:id="@+id/ib_msg_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:background="@color/transparent"
                    android:padding="@dimen/dp_10"
                    android:src="@drawable/icon_msg_cancel" />

                <ImageButton
                    android:id="@+id/ib_msg_action"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:background="@color/transparent"
                    android:padding="@dimen/dp_10"
                    android:src="@drawable/icon_msg_action" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_liveStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:visibility="gone" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/ib_startPlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/bg_start_play_selector"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_offline_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/remote_offline_tips"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/ib_talkback"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_20"
                android:background="@drawable/background_icon_talkback"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ll_videoSrc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_videosrc"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="24dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_videoSrc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tv_videoSrc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/live_remote"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_control_landscape"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="24dp"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/btn_highlight_selector" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_sd_selector" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:background="@drawable/bg_panorama_land_selector" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_narrow_screen_land_selector" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_thumbnail_landscape"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_alignBottom="@id/media_window"
                android:background="@color/colorControlPanel"
                android:visibility="gone">

                <ImageButton
                    android:id="@+id/ib_stopPlay_land"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="24dp"
                    android:background="@drawable/bg_stop_play_selector"
                    android:padding="8dp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/tv_bps_land"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@id/ib_stopPlay_land"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:id="@+id/rl_videoProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/ib_projection_land"
                    android:layout_toEndOf="@+id/ib_stopPlay_land">

                    <SeekBar
                        android:id="@+id/sb_video"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/sb_video"
                        android:layout_centerHorizontal="true">

                        <TextView
                            android:id="@+id/tv_playProgress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            tools:text="0:00" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/thick_stick"
                            android:textColor="@android:color/white"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            tools:text="0:32" />

                    </LinearLayout>

                </RelativeLayout>

                <ImageButton
                    android:id="@+id/ib_fullScreen_land"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_narrow_screen_selector"
                    android:padding="8dp" />

                <ImageButton
                    android:id="@+id/ib_projection_land"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:layout_toStartOf="@id/ib_fullScreen_land"
                    android:background="@drawable/bg_panorama_selector"
                    android:padding="8dp" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_control_portrait"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@color/colorPrimary">

            <ImageButton
                android:id="@+id/ib_stopPlay_port"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="24dp"
                android:background="@drawable/bg_stop_play_selector"
                android:padding="8dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_bps_port"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/ib_stopPlay_port"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <ImageButton
                android:id="@+id/ib_fullScreen_port"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_full_screen_selector"
                android:padding="8dp" />

            <ImageButton
                android:id="@+id/ib_projection_port"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:layout_toStartOf="@id/ib_fullScreen_port"
                android:background="@drawable/bg_panorama_selector"
                android:padding="8dp" />

        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/ll_talkback"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_talkback"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="@dimen/dp_110"
                    android:layout_height="@dimen/dp_104"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_42"
                    android:layout_marginBottom="@dimen/dp_42">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/icon_talkback" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/dp_24"
                        android:text="@string/release_to_stop"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14" />
                </RelativeLayout>
            </LinearLayout>

        </FrameLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_filter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC000000"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_event_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:textColor="@color/white"
            android:textSize="80sp"
            android:textStyle="bold"
            tools:text="0" />

        <TextView
            android:id="@+id/tv_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_event_num"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-12dp"
            android:text="@string/video_videos"
            android:textColor="#E5E5E5"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tv_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_event"
            android:layout_marginStart="50dp"
            android:layout_marginTop="16dp"
            android:text="@string/video_source"
            android:textColor="#919191"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/ll_source"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@id/tv_source"
            android:layout_margin="16dp">

            <RadioGroup
                android:id="@+id/rg_source"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <RadioButton
                    android:id="@+id/rb_cloud"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_video_source"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="@string/video_cloud"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />
            </RadioGroup>
        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/ll_source"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:background="#776F6F" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view"
            android:layout_marginStart="50dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="50dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/video_type"
                android:textColor="#919191"
                android:textSize="16sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:overScrollMode="never" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/ib_filter_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            android:background="@color/transparent"
            android:src="@drawable/icon_filter_finish_n" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:clickable="true"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_sliding_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_37"
            android:gravity="center"
            android:text="@string/slide_the_thumbnail_to_change_a_camera"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

        <FrameLayout
            android:id="@+id/frame_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_sliding_tips"
            android:layout_marginStart="@dimen/dp_34"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginEnd="@dimen/dp_34"
            android:layout_marginBottom="@dimen/dp_68" />

        <ImageView
            android:id="@+id/iv_close_preview"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_alignTop="@id/frame_preview"
            android:layout_alignEnd="@id/frame_preview"
            android:layout_margin="@dimen/dp_15"
            android:src="@drawable/icon_close_grey" />
    </RelativeLayout>
</RelativeLayout>