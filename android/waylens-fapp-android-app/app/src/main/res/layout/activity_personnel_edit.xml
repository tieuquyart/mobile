<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main_color"
    android:divider="@drawable/divider_small"
    android:showDividers="middle"
    tools:context="com.mk.autosecure.ui.activity.settings.PersonnelEditActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white"
        android:theme="@style/ToolbarStyle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_scrollFlags="scroll"
        app:navigationIcon="@drawable/ic_back">

        <TextView
            android:id="@+id/tv_toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:textColor="@color/colorToolbarTitle"
            android:textSize="@dimen/sp_20"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/ll_input"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:gravity="center_vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/et_personnel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_26"
            android:layout_marginEnd="@dimen/dp_26"
            android:background="@null"
            android:maxLines="1"
            android:singleLine="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_plate_number"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            style="@style/SettingItemPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_26"
            android:text="@string/plate_number" />

        <EditText
            android:id="@+id/et_plate_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_26"
            android:layout_marginEnd="@dimen/dp_26"
            android:background="@null"
            android:gravity="end"
            android:hint="eg. NY 999NNN"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/colorNaviText"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_driver_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:visibility="gone">

        <TextView
            style="@style/SettingItemPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_26"
            android:text="@string/driver_name" />

        <EditText
            android:id="@+id/ed_driver_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_26"
            android:background="@drawable/gray_rectangle_bg"
            android:gravity="start|center_vertical"
            android:maxLines="0"
            android:paddingLeft="@dimen/dp_5"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

        <TextView
            style="@style/SettingItemPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/gender" />

        <EditText
            android:id="@+id/ed_driver_gender"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_26"
            android:background="@drawable/gray_rectangle_bg"
            android:gravity="start|center_vertical"
            android:maxLines="0"
            android:paddingLeft="@dimen/dp_5"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

        <TextView
            style="@style/SettingItemPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/phone_number" />

        <EditText
            android:id="@+id/ed_driver_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_26"
            android:background="@drawable/gray_rectangle_bg"
            android:gravity="start|center_vertical"
            android:maxLines="0"
            android:paddingLeft="@dimen/dp_5"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />


        <TextView
            style="@style/SettingItemPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/id_number" />

        <EditText
            android:id="@+id/ed_driver_idNo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_26"
            android:background="@drawable/gray_rectangle_bg"
            android:gravity="start|center_vertical"
            android:maxLines="0"
            android:paddingLeft="@dimen/dp_5"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

        <TextView
            style="@style/SettingItemPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/driver_license" />

        <EditText
            android:id="@+id/ed_driver_license"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_26"
            android:background="@drawable/gray_rectangle_bg"
            android:gravity="start|center_vertical"
            android:maxLines="0"
            android:paddingLeft="@dimen/dp_5"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

        <TextView
            style="@style/SettingItemPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/license_type" />

        <EditText
            android:id="@+id/ed_license_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_26"
            android:background="@drawable/gray_rectangle_bg"
            android:gravity="start|center_vertical"
            android:maxLines="0"
            android:paddingLeft="@dimen/dp_5"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

        <TextView
            style="@style/SettingItemPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/driving_years" />

        <EditText
            android:id="@+id/ed_driving_years"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_26"
            android:background="@drawable/gray_rectangle_bg"
            android:gravity="start|center_vertical"
            android:maxLines="0"
            android:paddingLeft="@dimen/dp_5"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

        <TextView
            style="@style/SettingItemPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/employee_id" />

        <EditText
            android:id="@+id/ed_employeeId"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_26"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@color/medium_gray"
            android:enabled="false"
            android:gravity="start|center_vertical"
            android:maxLines="0"
            android:paddingLeft="@dimen/dp_5"
            android:singleLine="true"
            android:textColor="@color/colorNaviText"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_vehicle_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:visibility="gone">

        <TextView
            style="@style/SettingItemPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_26"
            android:text="@string/plate_number" />

        <EditText
            android:id="@+id/ed_plate_number"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_26"
            android:background="@color/medium_gray"
            android:enabled="false"
            android:gravity="start|center_vertical"
            android:maxLines="0"
            android:paddingLeft="@dimen/dp_5"
            android:singleLine="true"
            android:textColor="@color/colorNaviText"
            android:textSize="@dimen/sp_14" />

        <TextView
            style="@style/SettingItemPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/model" />

        <EditText
            android:id="@+id/ed_vehicle_model"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_26"
            android:background="@drawable/gray_rectangle_bg"
            android:gravity="start|center_vertical"
            android:maxLines="0"
            android:paddingLeft="@dimen/dp_5"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

        <TextView
            style="@style/SettingItemPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/vehicle_number" />

        <EditText
            android:id="@+id/ed_vehicle_no"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_26"
            android:background="@color/medium_gray"
            android:enabled="false"
            android:gravity="start|center_vertical"
            android:maxLines="0"
            android:paddingLeft="@dimen/dp_5"
            android:singleLine="true"
            android:textColor="@color/colorNaviText"
            android:textSize="@dimen/sp_14" />

        <TextView
            style="@style/SettingItemPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/capacity" />

        <EditText
            android:id="@+id/ed_vehicle_capacity"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_26"
            android:background="@drawable/gray_rectangle_bg"
            android:gravity="start|center_vertical"
            android:maxLines="0"
            android:paddingLeft="@dimen/dp_5"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

        <TextView
            style="@style/SettingItemPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/type" />

        <EditText
            android:id="@+id/ed_vehicle_type"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_26"
            android:background="@drawable/gray_rectangle_bg"
            android:gravity="start|center_vertical"
            android:maxLines="0"
            android:paddingLeft="@dimen/dp_5"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll_select_driver"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_bottom"
        android:layout_below="@+id/toolbar"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_select_driver"
            style="@style/SettingItemGrayBig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="@string/select_driver"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_select_driver"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:background="@drawable/bg_item_filter"
            android:fadeScrollbars="false"
            android:paddingTop="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_16"
            android:scrollbarFadeDuration="0">

            <RadioGroup
                android:id="@+id/rg_drivers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </ScrollView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_select_device"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom"
        android:layout_below="@id/toolbar"
        android:visibility="gone">

        <TextView
            android:id="@+id/title_select_camera"
            style="@style/SettingItemGrayBig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="@string/select_device_of_of_vehicle"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_15" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/title_select_camera"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:background="@drawable/bg_item_filter"
            android:fadeScrollbars="false"
            android:paddingTop="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_16"
            android:scrollbarFadeDuration="0">

            <RadioGroup
                android:id="@+id/rg_devices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </ScrollView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_select_vehicle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            style="@style/SettingItemGrayBig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_marginBottom="@dimen/dp_22"
            android:text="@string/please_choose_a_driver_of_your_vehicle" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_220">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:id="@+id/rg_vehicles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/ll_add_plate_number"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:background="@drawable/item_common_background"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_14"
                android:src="@drawable/icon_settings_add_new_camera"
                app:tint="@color/colorBaseFleet" />

            <TextView
                style="@style/SettingItemPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_new_plate_number" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_bind"
                style="@style/BorderButton"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_76"
                android:enabled="false"
                android:text="@string/bind" />

        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/colorBackgroundWhite"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_email_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_26"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginEnd="@dimen/dp_26"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_export_warning"
                app:tint="#9B9B9B" />

            <TextView
                style="@style/SettingItemGrayBig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:text="@string/email_address_can_be_empty" />
        </LinearLayout>

        <TextView
            style="@style/SettingItemGrayBig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@string/if_so_the_driver_will_be_created_in_the_fleet_but_the_driver_account_will_not_take_effect_until_the_email_is_entered" />

        <TextView
            style="@style/SettingItemGrayBig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@string/email_can_be_entered_at_any_time_to_activate_the_driver_account" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_phone_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_26"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginEnd="@dimen/dp_26"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_export_warning"
            app:tint="#9B9B9B" />

        <TextView
            style="@style/SettingItemGrayBig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:text="@string/phone_number_can_be_empty" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_cancel"
            style="@style/BorderButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/border_ed"
            android:text="@string/cancel"
            android:textColor="@color/holo_red_dark" />

        <Button
            android:id="@+id/btn_confirm"
            style="@style/BorderButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_margin="@dimen/dp_10"
            android:layout_weight="1"
            android:text="@string/x_c_nh_n" />

    </LinearLayout>

</RelativeLayout>
