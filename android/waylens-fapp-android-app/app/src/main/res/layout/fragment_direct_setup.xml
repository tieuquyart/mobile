    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ViewAnimator
        android:id="@+id/va_direct_setup"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/layout_search_direct" />

        <include layout="@layout/layout_choose_direct" />

        <include layout="@layout/layout_pairing_direct" />

        <include layout="@layout/layout_enable_direct" />

        <include layout="@layout/layout_normal_direct" />
    </ViewAnimator>

</androidx.constraintlayout.widget.ConstraintLayout>