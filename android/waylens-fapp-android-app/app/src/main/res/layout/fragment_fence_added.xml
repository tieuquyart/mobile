<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mk.autosecure.ui.fragment.FenceAddedFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dp_41"
            android:layout_height="@dimen/dp_41"
            android:src="@drawable/icon_test_finished" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_13"
            android:text="@string/finished"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:id="@+id/tv_fence_tips"
            style="@style/SettingItemGrayBig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_80"
            android:gravity="center_horizontal"
            tools:text="@string/the_vehicles_trigger_this_geo_fence_has_been_updated_n_nwhen_the_vehicle_restarts_the_geo_fence_takes_effect" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_76"
        android:background="@color/colorBaseFleet"
        android:text="@string/ok"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />
</LinearLayout>
