<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_handle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_5"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_8"
        android:src="@drawable/icon_handle"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="7">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_weight="2"
            android:background="@drawable/border_status_total"
            android:gravity="center">

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_total"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_15"
                android:src="@drawable/ic_total" />

            <TextView
                style="@style/PrimaryNormalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15" />

            <TextView
                style="@style/PrimaryNormalText"
                android:id="@+id/tv_total_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_10"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold"
                tools:text="11" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_weight="2"
            android:background="@drawable/border_status_driving">

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_driving_marker"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_15"
                android:src="@drawable/ic_driving" />

            <TextView
                style="@style/PrimaryNormalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/driving"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/tv_driving_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/sp_15"
                tools:text="4" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_weight="2"
            android:background="@drawable/border_status_parked"
            android:orientation="horizontal">

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_parking_marker"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/dp_15"
                android:src="@drawable/ic_parking" />

            <TextView
                style="@style/PrimaryNormalText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/parking"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15" />

            <TextView
                android:id="@+id/tv_parking_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dp_10"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold"
                tools:text="11" />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/llExpand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_weight="1"
            android:background="@drawable/border_status_total"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_expand"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_25"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/dp_10"
                android:src="@drawable/icon_expand_arrow" />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_14"
        android:background="@color/colorBackgroundWhite"
        android:visibility="gone" />

    <!--    <HorizontalScrollView-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:scrollbars="none">-->

    <LinearLayout
        android:id="@+id/ll_filter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:background="@color/transparent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_15"
        android:visibility="visible">

        <RadioGroup
            android:id="@+id/rg_filter_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <RadioButton
                android:id="@+id/rb_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@drawable/background_overview_filter"
                android:button="@null"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:text="@string/status"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rb_plate_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dp_12"
                android:layout_weight="1"
                android:background="@drawable/background_overview_filter"
                android:button="@null"
                android:paddingStart="@dimen/dp_10"
                android:paddingTop="@dimen/dp_5"
                android:paddingEnd="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_5"
                android:text="@string/plate_number"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_12"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/rb_mileage_driven"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_4"
                android:layout_marginEnd="@dimen/dp_4"
                android:layout_weight="1"
                android:background="@drawable/background_overview_filter"
                android:button="@null"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:text="@string/mileage_driven"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rb_time_driven"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_4"
                android:layout_marginEnd="@dimen/dp_4"
                android:layout_weight="1"
                android:background="@drawable/background_overview_filter"
                android:button="@null"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:text="@string/time_driven"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rb_event"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_4"
                android:layout_weight="1"
                android:background="@drawable/background_overview_filter"
                android:button="@null"
                android:gravity="center_horizontal"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:text="@string/event"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold" />
        </RadioGroup>

    </LinearLayout>
    <!--    </HorizontalScrollView>-->
</LinearLayout>